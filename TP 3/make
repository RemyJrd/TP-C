CC=gcc
CFLAGS=-Wall -O -ansi -pedantic
LDFLAGS=
EXEC=exercice1

all: $(EXEC)

exercice1: main.c functions.h functions.c
$(CC) -o exercice1 functions.h functions.c main.c $(LDFLAGS)

exemple.o: exemple.c
$(CC) -o exemple.o -c exemple.c $(CFLAGS)

main.o: main.c functions.c functions.h
$(CC) -o main.o -c main.c $(CFLAGS)

clean:
rm -f *.o core

mrproper: clean
rm -f $(EXEC)
